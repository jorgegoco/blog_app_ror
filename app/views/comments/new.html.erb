<div class="comment-form">
  <h1>New Comment</h1>
  <%= form_with model: comment, url: user_post_comments_path, method: :post, local: true, scope: :comment do |f| %>
    <div>
      <%= f.label :text %>
      <br>
      <%= f.text_area :text %>
    </div>
    <%= f.submit "Add Comment" %>
  <% end %>
</div>
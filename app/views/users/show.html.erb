<% if @user.nil? %>
<p>user not found</p>
<% else %>
<%= render partial: "shared/user", locals: { user: @user } %>
<br>
Bio
<p><%= @user.bio %></p>
<table>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td>Comments <%= post.comments_counter %></td>
      <td>Likes <%= post.likes_counter %></td> 
    </tr>
  <% end %>
</table>       
<% end %>
<% if user_signed_in? %> 
  <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "log-out-button nav-button" %> 
<% else %>
  <%= button_to "Log in", new_user_session_path %> 
<% end %>
<h1 class="users-header">Users</h1>
<% @users.each do |user| %>
  <%= render partial: "shared/user", locals: { user: user } %>
  <%= link_to "/users/#{user.id}" do %>
    <button class="posts-button nav-button">Posts</button>
  <% end %>
<% end %> 
  
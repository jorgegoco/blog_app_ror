<% if @user.nil? %>
<p>user not found</p>
<% else %>
<div>
  <p><%= @user.photo %></p>
  <p><%= @user.name %></p>
  <p><%= @user.posts_counter %></p> 
</div>
<div>
  <% @posts.each do |post| %>
      <p><%= post.title %></p>
      <p><%= post.text %></p>
      <p>Comments <%= post.comments_counter %></p>
      <div>Likes <%= post.likes_counter %></p> 
      <div>
        <% post.comments.each do |comment| %>
        <p><%= comment.comment_author %></p>
        <p><%= comment.text %></p>
        <% end %>
      </div>
  <% end %>
</div>       
<% end %>
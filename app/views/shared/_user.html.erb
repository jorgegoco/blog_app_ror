<div class="user">
  <img src=<%= user.photo %> alt="image" class="user-profile-img">
  <div class="username">
  <h2><%= user.name %></h2>
  <% if current_user && current_user.id == user.id %>
      <p>(logged in)</p>
    <% end %>
  </div>
  <p class="user-number-posts">Number of posts: <%= user.posts_counter %></p>
</div>